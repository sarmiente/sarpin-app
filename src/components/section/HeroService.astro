---
/* Props opcionales */
const {
  title,
  subtitle,
  description,
  image, 
} = Astro.props;
---
<section class="w-full min-h-screen bg-dark text-white flex items-center py-20 md:py-0">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-16 items-center">

    <!-- LEFT CONTENT -->
    <div class="space-y-6 text-center md:text-left max-w-xl mx-auto md:mx-0 order-2 md:order-1">
      
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-heading font-bold leading-tight">
        {title}
      </h1>

      <p class="text-gray-200 leading-relaxed font-body text-base sm:text-lg">
        {subtitle}
      </p>

      <p class="text-gray-200 leading-relaxed font-body text-base sm:text-lg">
        {description}
      </p>

      <!-- BUTTON -->
      <a target="_blank"
        href="https://api.whatsapp.com/send/?phone=573053412415&text=Hola%2C%20estoy%20interesado%20en%20sus%20servicios"
        class="mx-auto md:mx-0 inline-flex items-center gap-3 bg-main hover:text-black text-white
        px-5 sm:px-6 py-3 sm:py-4 rounded-xl font-semibold w-fit hover:bg-gray-200 transition"
      >
        <span class="text-left">
          <span class="block leading-none font-heading text-base sm:text-lg">Desata</span>
          <span class="block leading-none font-heading text-base sm:text-lg">el potencial de tu marca</span>
          <span class="block text-[10px]  sm:text-xs font-body">
            DESCUBRE LA LISTA DE PRECIOS
          </span>
        </span>

        <div class="w-9 h-9 sm:w-10 sm:h-10 flex items-center justify-center border rounded-lg">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4 sm:w-5 sm:h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </div>
      </a>
    </div>

    <!-- RIGHT IMAGE -->
    <div class="flex justify-center order-2">
      <img
        src={image}
        alt="Service image"
        class="rounded-3xl w-full max-w-xs sm:max-w-sm md:max-w-md object-cover shadow-xl"
      />
    </div>

  </div>
</section>
